{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "watch": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
